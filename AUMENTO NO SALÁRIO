import java.util.Scanner;
import java.io.*;

class Main {
  public static void main(String[] args) {
     double salario, aumento, vlraumento, novosl; 
		Scanner ler = new 
    Scanner(System.in);
    
        System.out.println("VAMOS ANALISAR SEU AUMENTO");
        System.out.println("Qual é seu salário?");
        salario = ler.nextDouble();
        System.out.println("Qual a porcentagem que seu salário vai aumentar?");
